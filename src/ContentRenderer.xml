<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendixlabs.widget.native.contentrenderer.ContentRenderer" pluginWidget="true" needsEntityContext="true" offlineCapable="true"
        supportedPlatform="Native"
        xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Content Renderer</name>
    <description>Render different types of content in your Mendix Native Mobile app</description>
    <studioProCategory>Display</studioProCategory>
    <studioCategory>Display</studioCategory>
    <properties>
        <!-- DATA -->
        <propertyGroup caption="Data">
            <property key="dataExpression" type="expression" required="true" defaultValue="''">
                <caption>Data</caption>
                <description></description>
                <returnType type="String" />
            </property>
            <property key="dataType" type="expression" required="true" defaultValue="0">
                <caption>Type</caption>
                <description>Type of data, expressed as a number:
0: HTML
1: Markdown
2: JSON

Will revert to HTML if number is not recognized</description>
                <returnType type="Integer" />
            </property>
        </propertyGroup>

        <!-- LINK HANDLING -->
        <propertyGroup caption="Link Handling">
            <property key="onClickAction" type="action" required="false">
                <caption>On Click Action</caption>
                <description>If not defined, the system will handle it itself (e.g. open a browser)</description>
            </property>
            <property key="onClickLinkAttribute" type="attribute" required="false">
                <caption>Link attribute</caption>
                <description>Will be set when you click a link. This can be used in combination with On Click Action.</description>
                <attributeTypes>
                     <attributeType name="String" />
                </attributeTypes>
            </property>
        </propertyGroup>

        <!-- JSON -->
        <propertyGroup caption="JSON">
            <propertyGroup caption="Theme">
                <property key="jsonViewerTheme" type="enumeration" defaultValue="bright">
                    <caption>JSON Viewer Theme</caption>
                    <description>Color theme for JSON Viewer (this cannot be done in styling right now). Default: bright (white background)</description>
                    <enumerationValues>
                        <enumerationValue key="threezerotwofour">threezerotwofour</enumerationValue>
                        <enumerationValue key="apathy">apathy</enumerationValue>
                        <enumerationValue key="ashes">ashes</enumerationValue>
                        <enumerationValue key="atelier_dune">atelier dune</enumerationValue>
                        <enumerationValue key="atelier_forest">atelier forest</enumerationValue>
                        <enumerationValue key="atelier_heath">atelier heath</enumerationValue>
                        <enumerationValue key="atelier_lakeside">atelier lakeside</enumerationValue>
                        <enumerationValue key="atelier_seaside">atelier seaside</enumerationValue>
                        <enumerationValue key="bespin">bespin</enumerationValue>
                        <enumerationValue key="brewer">brewer</enumerationValue>
                        <enumerationValue key="bright">bright</enumerationValue>
                        <enumerationValue key="chalk">chalk</enumerationValue>
                        <enumerationValue key="codeschool">codeschool</enumerationValue>
                        <enumerationValue key="colors">colors</enumerationValue>
                        <enumerationValue key="default">default</enumerationValue>
                        <enumerationValue key="eighties">eighties</enumerationValue>
                        <enumerationValue key="embers">embers</enumerationValue>
                        <enumerationValue key="flat">flat</enumerationValue>
                        <enumerationValue key="google">google</enumerationValue>
                        <enumerationValue key="grayscale">grayscale</enumerationValue>
                        <enumerationValue key="green_screen">green screen</enumerationValue>
                        <enumerationValue key="harmonic16">harmonic16</enumerationValue>
                        <enumerationValue key="hopscotch">hopscotch</enumerationValue>
                        <enumerationValue key="isotope">isotope</enumerationValue>
                        <enumerationValue key="marrakesh">marrakesh</enumerationValue>
                        <enumerationValue key="mocha">mocha</enumerationValue>
                        <enumerationValue key="monokai">monokai</enumerationValue>
                        <enumerationValue key="ocean">ocean</enumerationValue>
                        <enumerationValue key="paraiso">paraiso</enumerationValue>
                        <enumerationValue key="pop">pop</enumerationValue>
                        <enumerationValue key="railscasts">railscasts</enumerationValue>
                        <enumerationValue key="shapeshifter">shapeshifter</enumerationValue>
                        <enumerationValue key="solarized">solarized</enumerationValue>
                        <enumerationValue key="summerfruit">summerfruit</enumerationValue>
                        <enumerationValue key="tomorrow">tomorrow</enumerationValue>
                        <enumerationValue key="london_tube">london tube</enumerationValue>
                        <enumerationValue key="twilight">twilight</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="jsonViewerInvertTheme" type="boolean" defaultValue="false">
                    <caption>Invert Theme</caption>
                    <description></description>
                </property>
            </propertyGroup>
        </propertyGroup>

    </properties>
</widget>
